<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountsActivity"
    android:id="@+id/count_layout">

    <TextView
        android:id="@+id/tv_pers_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="Mes comptes"
        android:textSize="40dp"
        />

    <LinearLayout
        android:id="@+id/ll_pers_count"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginStart="8dp"

        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"

        android:layout_marginRight="8dp"
        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pers_count">

        <Button
            android:id="@+id/bt_new_pers_count"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ext_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll_pers_count"

        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Comptes ReliÃ©s"

        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"

         />

    <LinearLayout
        android:id="@+id/ll_ext_count"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"

        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ext_count"

        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <Button
            android:id="@+id/bt_new_ext_count"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTest"
        android:layout_width="161dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_ext_count" />


</android.support.constraint.ConstraintLayout>